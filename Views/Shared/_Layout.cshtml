<!DOCTYPE html>https://github.com/JessicaDuartedev/IDonateApp-main/blob/main/Views/Shared/_Layout.cshtml
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@ViewData["Title"] - IDonateApp</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        * {
  padding:0;
  margin:0;
}
        body{  display: table;
  width: 50%;
  height: 10vh;
  padding: 100px 0;
  color: white;
 background-image: url('img/bgdonate.png');
  background-position: 2%;
  background-size: cover;



            
        }
    </style>
</head>
<body>
 
    <header>
        <nav class="navbar navbar-light bg-warning">
            
            <div class="container-fluid bg-índigo"  >
               
